[user]
        name = "Herbert Pfennig"
        #email is set on a per repo basis using [email-aliases] section

[email-aliases]
        # Used by the set_user_email() pre-commit hook
        w = hpfennig@silvertailsystems.com
        p = dasein555@gmail.com

[branch]
        autosetuprebase = always
        autosetupmerge = false

[push]
        default = tracking

[init]
	templatedir = ~/.git_template

[alias]
        st = status
        ci = commit
        br = branch
        co = checkout
        df = diff
        ll = log --graph --pretty=format:'%C(yellow)%h %C(green)%d %Creset%s %Cred(%cr) %C(bold blue)<%cn>' --abbrev-commit --decorate --date=short
        lla = log --graph --pretty=format:'%C(yellow)%h %C(green)%d %Creset%s %Cred(%cr) %C(bold blue)<%cn>' --abbrev-commit --decorate --date=short --all
        lg = log --pretty=format:'%C(red)%ad %C(yellow)%h %C(green)%d %Creset%s %C(bold blue)<%cn>' --date=short
        lgm = log --pretty=format:'%C(red)%ad %C(yellow)%h %C(green)%d %Creset%s %C(bold blue)<%cn>' --date=short --merges
        fixup = !sh -c 'git commit -m \"fixup! $(git log -1 --format='\\''%s'\\'' $@)\"' -

[color]
        branch = auto
        diff = auto
        status = auto

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta
        old = red bold
        new = green

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[color]
        ui = true

[core]
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
        excludesfile = ~/.gitignore_global

[diff "gunzip"]
        textconv = gunzip -c

[diff "tcpdump"]
        textconv = tcpdump -qns 0 -X -r

[mergetool "ediff"]
        cmd = emacs -nw --eval \" \
(progn \
  (setq ediff-quit-hook 'kill-emacs) \
  (if (file-readable-p \\\"$BASE\\\") \
      (ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \
                                       \\\"$BASE\\\" nil \\\"$MERGED\\\") \
      (ediff-merge-files \\\"$LOCAL\\\" \\\"$REMOTE\\\" nil \\\"$MERGED\\\")))\"

[merge]
        tool = ediff
